    font-size: 1.2rem;
    margin-bottom: 40px;
}

button {
    padding: 20px 40px;
    font-size: 1rem;
    background: #00ff88;
    color: #111;
    border: none;
    border-radius: 15px;
    cursor: pointer;
    font-weight: bold;
    transition: transform 0.2s, box-shadow 0.2s;
}

button:hover {
    transform: scale(1.1);
    box-shadow: 0 0 20px #00ff88;
}

button:active {
    transform: scale(0.95);
}

#game-pin {
    font-size: 1rem;
    color: #ffff00;
    margin-bottom: 30px;
    letter-spacing: 2px;
}

@keyframes glow {
    0% { text-shadow: 0 0 5px #fff, 0 0 10px #ff0, 0 0 15px #f0f; }
    100% { text-shadow: 0 0 20px #fff, 0 0 30px #ff0, 0 0 40px #f0f; }
}
